---
import Layout from "../layouts/Layout.astro";
import { LiaDownloadSolid } from "react-icons/lia";
---

<Layout title="Lakshay Bhushan | Resume">
	<h1 class="font-heading text-[2rem] tracking-tight text-primary">Resume</h1>
	<h2 class="font-heading text-base tracking-tight text-title">
		here's a brief overview of my professional experience
	</h2>
	<iframe
		src="/docs/Resume.pdf"
		width="100%"
		height="600px"
		class="pt-4"
		title="Lakshay's Resume"></iframe>

	<p class="pt-4 font-sans text-sm font-normal">
		If you prefer a more traditional format, you can download the pdf version of
		my resume by clicking the button below.
	</p>

	<a
		href="/docs/Resume.pdf"
		download="Lakshay_Bhushan_Resume.pdf"
		class="hover:bg-primary-dark mt-4 inline-block rounded-full bg-primary px-4 py-2 text-xs text-cream transition duration-300 ease-in-out hover:bg-primary/75">
		<LiaDownloadSolid className="-mt-0.5 inline-block" />
		<span>Download PDF</span>
	</a>
</Layout>
