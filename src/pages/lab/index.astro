---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { RiArrowRightUpLine } from "react-icons/ri";
import { Image } from "astro:assets";

const allPosts = await getCollection("lab");

allPosts.sort((a, b) => {
	const dateA = new Date(a.data.date);
	const dateB = new Date(b.data.date);
	return dateB.getTime() - dateA.getTime();
});
---

<Layout title="Lakshay Bhushan â€¢ Lab">
	<h1 class="text-[2rem] font-bold tracking-tight text-primary">Lab</h1>
	<h2 class="text-base font-medium tracking-tight text-title">
		a collection of some concept ui designs and experiments.
	</h2>
	<section class="pt-4">
		<div class="grid gap-4 md:grid-cols-2">
			{
				allPosts.map((post) => (
					<a
						href={"/lab/" + post.slug}
						target="_self"
						class="group mt-2 flex w-full flex-col gap-2.5 overflow-hidden rounded-xl border border-body/20 px-3 py-3 transition-all duration-300 ease-in-out md:-mx-3 md:items-start md:hover:scale-95 md:hover:bg-hoverColor">
						<Image
							src={post.data.cover}
							width={800}
							height={800}
							format="avif"
							loading="lazy"
							class="!m-0 block aspect-video rounded-md object-cover object-center"
							alt="cover image for posts in lab"
						/>
						<div class="flex flex-col items-start">
							<h2 class="flex items-center justify-between font-medium tracking-tight text-title group-hover:text-primary">
								<span>{post.data.title}</span>
								<RiArrowRightUpLine className="ml-1 text-primary opacity-0 transition-opacity duration-150 group-hover:opacity-100" />
							</h2>

							<p class="pt-0.5 text-sm font-normal text-body">
								{post.data.excerpt}
							</p>
						</div>
					</a>
				))
			}
		</div>
	</section>
</Layout>
